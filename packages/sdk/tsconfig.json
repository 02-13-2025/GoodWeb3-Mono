{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "baseUrl": "./src",
    "paths": {
      "@gd-test-repo/sdk/core": ["/core"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": false,
    "types": ["jest", "node", "bn.js"],
    "typeRoots": ["./node_modules/@types", "./types", "../../node_modules/@types"],
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "declarationDir": "types",
    "composite": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "src", "**/*.json"],
  "exclude": ["node_modules", "*.json", "types"],
}