{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "baseUrl": "./src",
    "rootDir": "src",
    "outDir": "dist",
    "types": [],
    "typeRoots": ["./node_modules/@types", "./types", "../../node_modules/@types"],
    "jsx": "react",
    "declarationDir": "types",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": true
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["node_modules", "types", "*.json"]
}
